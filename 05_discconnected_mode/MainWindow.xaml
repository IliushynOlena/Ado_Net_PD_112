<Window x:Class="_05_discconnected_mode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_discconnected_mode"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Margin="4" MinWidth="100" Click="Button_Click">Fill</Button>
            <Separator>
                <Separator.LayoutTransform>
                    <RotateTransform Angle="90" />
                </Separator.LayoutTransform>
            </Separator>
            <Button  Margin="4" MinWidth="100" Click="Button_Click_1">Update</Button>
            <TextBox  Margin="4" Name="commandTextBox"></TextBox>
        </DockPanel>
        <DataGrid Name="dataGrid" Margin="5" Grid.Row="1">
            
        </DataGrid>

    </Grid>
</Window>
